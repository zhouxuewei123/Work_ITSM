<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">

            <!-- 填充 -->
            <solid android:color="@color/cc_orage"/>

            <size
                android:width="90dp"
                android:height="90dp"/>

        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="oval">

            <!-- 填充 -->
            <solid android:color="@color/cc_orage"/>

            <!-- 描边 -->
            <stroke
                android:width="1px"
                android:color="@color/white"
                android:dashGap="4px"
                android:dashWidth="4px"/>
        </shape>
    </item>
</layer-list>