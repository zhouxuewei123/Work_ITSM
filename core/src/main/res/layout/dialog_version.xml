<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/shape_rect_btn_white"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="145dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/version_dialog_head_bk" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_version_title"
                style="@style/text_title_blank"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#333333"
                android:gravity="center"
                android:text="应用更新" />

            <TextView
                android:id="@+id/text_version_size"
                style="@style/text_title_white"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/shape_oval_version"
                android:gravity="center"
                android:text="13.2M" />

        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/text_version_log"
        style="@style/text_nomal_blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:lineSpacingExtra="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:maxLines="9"
        android:scrollbarThumbVertical="@drawable/none"
        android:text="1：更新城市\n2：修复部分bug\n3：更新界面" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:src="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/negativeButton"
            style="@style/text_nomal_darklight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:gravity="center"
            android:text="再想想"/>
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/positiveButton"
            style="@style/text_nomal_orage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:gravity="center"
            android:text="去更新"/>
    </LinearLayout>

</LinearLayout>